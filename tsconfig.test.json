{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "ES5",
    "declaration": true,
    "declarationDir": "./dist",
    "module": "ESNext",
    "noImplicitAny": false,
    "sourceMap": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}